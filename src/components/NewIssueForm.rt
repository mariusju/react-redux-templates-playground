<form
  onSubmit="(e) => this.createIssue(e)"
  class="form-inline"
  style="margin-top: 10px;"
>
  <div class="form-group">
    <label for="new-issue">
      New issue
    </label>
    <input
      name="new-issue"
      className="form-control"
      style="margin: 0 5px"
      type="text"
      value={this.state.newIssueTitle}
      onChange="(e) => this.handleTitleChange(e)"
    />
    <button
      type="submit"
      class="btn btn-primary"
    >
      Submit
    </button>
</div>
</form>